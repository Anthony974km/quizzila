{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Quizzila</h1>

    <ul>
    {% if not app.user %}
        <li> <code><a href="{{path('app_register_client', {})}}">Register</a></code></li>
        <li> <code><a href="{{path('app_login', {})}}">Login</a></code></li>
    {% else %}

    <h3>Hello {{app.user}} !</h3>
    
    {% if app.user.roles[0] == 'ROLE_ADMIN'  %}
    <ul>
        <li><code><a href="{{path('app_reponse_index', {})}}">Reponse</a></code></li>
        <li><code><a href="{{path('app_question_index', {})}}">Question</a></code></li>
        <li><code><a href="{{path('app_quizz_index', {})}}">Quizz</a></code></li>
        <li><code><a href="{{path('app_user_index', {})}}">User </a></code></li>
    </ul>

    {% elseif app.user.roles[0] == 'ROLE_PRO' %}
    <ul>
        <li><code><a href="{{path('app_reponse_index', {})}}">See the results</a></code></li>
    </ul>
    
    {% else %}
    <ul>
        <li><code><a href="{{path('app_quizz_client_index', {})}}">Start the quiz</a></code></li>
    </ul>
    {% endif %}
    
    </div>

<div class="sectionLogout">
    <li> <code><a href="{{path('app_logout', {})}}">Logout</a></code></li>
</div>
    {% endif %}
    </ul>
{% endblock %}
